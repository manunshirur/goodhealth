<%- include("../header") -%>
<div class="container">   
    <h2 class="table-title">Delete Presciptions</h2>
    <%- include('../partials/messages'); %>
    <table id="table" data-toggle="table" data-search="true" class="table-bordered">
        <thead class="thead-dark">
          <tr>
              <th scope="col">#</th>
              <th scope="col">Patient Name</th>
              <th scope="col">Doctor Name</th>
              <th scope="col">Prescription Date</th>
              <th scope="col">Qty</th>
              <th scope="col">Drug</th>
              <th scope="col">Manufacturer</th>
              <th scope="col">Status</th>
              <th scope="col">Action</th>
          </tr>
          </thead>
          <tbody class="table-light"> 
            <% for (var i = 0; i < res.length; i++) {%>
                  <tr>
                  <th scope="row"><%=i+1%></th>
                  <td><%=res[i].patient%></td>
                  <td><%=res[i].doctor%></td>
                  <td><%=res[i].pre_date.toLocaleDateString("en-US")%></td>
                  <td><%=res[i].quantity%></td>
                  <td><%=res[i].trade_name%></td>
                  <td><%=res[i].pharm_co_name%></td>
                  <td><%=res[i].status%></td>
                  <td><a href="/prescriptions/delete/<%=res[i].pre_id%>" class="btn btn-danger btn-md" type="button">Delete</a></td>
                  </tr>
            <%};%>
        </tbody>
    </table>
</div>
