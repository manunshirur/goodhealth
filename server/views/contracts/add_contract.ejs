<%- include("../header") -%>
<div class="container">
    <h2 class="table-title">Add Contract</h2>   
    <%- include('../partials/messages'); %>
    <form name="contract-add-form" method="POST" action="/contracts/add">
        <!-- First Row -->
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="pharm_id">Pharmacy Name</label>
            <select name="pharm_id" id="pharm_id" class="form-control">
              <% for (var i = 0; i < pharmacyNames.length; i++) {%>
                  <option value="<%=pharmacyNames[i].pharm_id%>"><%=pharmacyNames[i].name%></option>
              <%};%>
            </select>
          </div>
          <div class="form-group col-md-6">
            <label for="pharm_co_name">Pharmacy Company</label>
            <select name="pharm_co_name" id="pharm_co_name" class="form-control">
              <% for (var i = 0; i < pharmCoNames.length; i++) {%>
                  <option value="<%=pharmCoNames[i].name%>"><%=pharmCoNames[i].name%></option>
              <%};%>
            </select>
          </div>
      </div>

        <!-- Second Row -->
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="supervisor">Supervisor</label>
            <input type="text" class="form-control" name="supervisor" id="supervisor" placeholder="Supervisor" required>
          </div>
          <div class="form-group col-md-6">
            <label for="text">Text</label>
            <input type="text" class="form-control" name="text" id="text" placeholder="Text" required>
          </div>
        </div>

        <!-- Third Row -->
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="start_date">Start Date</label>
            <input type="date" class="form-control" name="start_date" id="start_date" required>
          </div>
          <div class="form-group col-md-6">
            <label for="end_date">End Date</label>
            <input type="date" class="form-control" name="end_date" id="end_date" required>
          </div>
        </div>

        <button type="submit" class="btn btn-primary">Create Contract</button>
      </form>
</div>


