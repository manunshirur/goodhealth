<%- include("../header") -%>
<div class="container">    
    <h2 class="table-title">All Patients and Prescriptions</h2>   
    <table id="table" data-toggle="table" data-search="true" class="table-bordered">
        <thead class="thead-dark">
          <tr>
              <th scope="col">#</th>
              <th scope="col">Patient SSN</th>
              <th scope="col">Patient Name</th>
              <th scope="col">Doctor SSN </th>
              <th scope="col">Doctor Name</th>
              <th scope="col">Date</th>
              <th scope="col">Quanity</th>
              <th scope="col">Drug</th>
              <th scope="col">Comapany</th>
          </tr>
          </thead>
          <tbody class="table-light"> 
            <% for (var i = 0; i < res.length; i++) {%>
                  <tr>
                    <th scope="row"><%=i + 1%></th>
                    <td><%=res[i].ssn%></td>
                    <td><%=res[i].name%></td>
                    <td><%=res[i].phy_ssn%></td>
                    <td><%=res[i].doctorname%></td>
                    <td><%if (res[i].pre_date) { %><%=res[i].pre_date.toLocaleDateString("en-US")%><% } %></td>
                    <td><%=res[i].quantity%></td>
                    <td><%=res[i].trade_name%></td>
                    <td><%=res[i].pharm_co_name%></td>
                  </tr>
            <%};%>
        </tbody>
    </table>
</div>


