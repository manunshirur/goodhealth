<%- include("../header") -%>
<div class="container">
    <h2 class="table-title">Delete Patient</h2>   
    <%- include('../partials/messages'); %>
    <table id="table" data-toggle="table" data-search="true" class="table-bordered">
        <thead class="thead-dark">
          <tr>
              <th scope="col">#</th>
              <th scope="col">SSN</th>
              <th scope="col">Name</th>
              <th scope="col">Dateof Birth </th>
              <th scope="col">Address</th>
              <th scope="col">Action</th>
          </tr>
          </thead>
          <tbody class="table-light"> 
            <% for (var i = 0; i < res.length; i++) {%>
                  <tr>
                  <th scope="row"><%=i+1%></th>
                  <td><%=res[i].ssn%></td>
                  <td><%=res[i].name%></td>
                  <td><%=res[i].birth_date.toLocaleDateString("en-US")%></td>
                  <td><%=res[i].address%></td>
                  <td><a href="/patients/delete/<%=res[i].ssn%>" class="btn btn-danger btn-md" type="button">Delete</a></td>
                  </tr>
            <%};%>
        </tbody>
    </table>
</div>


